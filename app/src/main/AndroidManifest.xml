<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.base111.beeline">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/grad_cap"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".BasicActivity"
            android:label="@string/basicsHome"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".NumbersBasicActivity"
            android:label="@string/basic_numbers"
            android:parentActivityName=".BasicActivity"/>

        <activity
            android:name=".GreetBasicActivity"
            android:label="@string/basic_greet"
            android:parentActivityName=".BasicActivity"/>

        <activity
            android:name=".PhrasesBasicActivity"
            android:label="@string/basic_phrases"
            android:parentActivityName=".BasicActivity"/>
    </application>

</manifest>